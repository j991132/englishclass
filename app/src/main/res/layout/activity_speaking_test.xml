<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D6BD5"
    android:orientation="vertical"
    tools:context=".SpeakingTest">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Speaking Test"
        android:textColor="#F8F08D"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stl_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        app:srcCompat="@drawable/appicon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="0sp"
            android:scaleType="centerInside"
            android:src="@drawable/record_btn" />

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:padding="0sp"
            android:scaleType="centerInside"
            android:src="@drawable/recstop_btn"
            />

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:padding="0sp"
            android:scaleType="centerInside"
            android:src="@drawable/recplaylist_btn"
            />

        <ImageButton
            android:id="@+id/StopPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:padding="0sp"
            android:scaleType="centerInside"
            android:src="@drawable/recplaystop_btn"/>

        <ImageButton
            android:id="@+id/btn_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:padding="0sp"
            android:scaleType="centerInside"
            android:src="@drawable/upload_btn" />

        <ImageButton
            android:id="@+id/dictionary_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:padding="0sp"
            android:scaleType="centerInside"
            android:src="@drawable/dictionary_btn" />

        <ImageButton
            android:id="@+id/extrawork_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/extrawork" />

    </LinearLayout>

</LinearLayout>